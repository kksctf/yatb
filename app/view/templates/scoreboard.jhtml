{% extends "base.jhtml" %}
{% import "macro.jhtml" as macro with context %}

{% block head %}
    {% set head_data.page_name = "Scoreboard" %}
    {{ super() }}
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table mt-1 bg-light border">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">username</th>
                    <th scope="col">score</th>
                    <th scope="col">latest</th>
                    <th scope="col"></th>
                    <th scope="col">timestamp</th>
                </tr>
            </thead>
            <tbody>
                {% for i, user in enumerate(scoreboard) %}
                    {% if len(user.solved_tasks) > 0 %}
                        {% set last_solve_info = user.get_last_solve_time() %}
                    {% endif %}
                    <tr>
                        <th scope="row">{{ i + 1 }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.score }}</td>
                        <td>
                            {% if len(user.solved_tasks) > 0 %}
                                <span style='display: none;' class='task_id_resolve'>{{ last_solve_info[0] }}</span>
                            {% else %}
                                ¯\_(ツ)_/¯
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex justify-content-start">
                            {% for task in all_tasks|sort(attribute='scoring.points')|sort(attribute='category') %}
                                <div class="m-0 p-0" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="{{ task.task_name }}  |  {{ task.category }}  |  {{ task.scoring.points }}">
                                    {% if task.task_id in user.solved_tasks %}
                                        <i class="bi bi-check" style="color: green;"></i>
                                    {% else %}
                                        <i class="bi bi-x" style="color: red;"></i>
                                    {% endif %}
                                </div>
                            {% endfor %}
                            </div>
                        </td>
                        <td>
                            {% if len(user.solved_tasks) > 0 %}
                                {{ template_format_time(last_solve_info[1]) }}
                            {% else %}
                                ¯\_(ツ)_/¯
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block footer %}
    {{ super() }}
{% endblock %}
